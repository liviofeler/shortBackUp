{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


        <div class="row">
            <div class="col-md-12">

                <div id="collapseOne" class="accordion-body collapse in">
                    <div class="accordion-inner">
                        <div class="col-md-4">
                            <h4>Pas encore inscrit ?</h4>

                            <em>
                                nous vous invitons à vous inscrire<br />
                                pour vous connecter au compile de données de l'Articque.
                            </em>
                            <br /><br />
                            <a href="{{ path('fos_user_registration_register') }}" class="btn btn-primary">S'inscrire</a>

                        </div>

                        <div class="col-md-4 offset2">
                            <h4>Connexion</h4>
                            <form action="{{ path("fos_user_security_check") }}" method="post">
                                {% if csrf_token %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                {% endif %}

                                <label for="username">{{ 'security.login.username'|trans }}</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                                <label for="password">{{ 'security.login.password'|trans }}</label>
                                <input type="password" id="password" name="_password" required="required" />
                                <br>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

                                <br>
                                <input class="btn btn-primary" type="submit" value="{{ 'security.login.submit'|trans }}" />
                            </form>



                        </div>
                    </div>
                </div>
                </div>
            </div>

                    <div class="col-md-10">
                        <a href="{{ path('fos_user_resetting_request') }}">Mot de passe perdu ?</a>
                    </div>



